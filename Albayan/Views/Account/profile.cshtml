@model Albayan.ViewModels.StudentProfileViewModel

<section class="section-padding profile">
    <div class="container">
        <div class="row g-4 justify-content-center align-items-center mb-5">
            <div class="col-12">
                <div class="profile-card w-100">
                    <div class="d-flex flex-column flex-md-row gap-4 justify-content-md-between align-items-center">
                        <div class="info">
                            <h3 class="name">@Model.Student.FullName</h3>
                            <span class="d-block"><i class="fas fa-location-dot"></i> @Model.Student.City، @Model.Student.Country</span>
                            <span class="d-block"><i class="fas fa-book-open"></i> @Model.Student.Grade?.Name</span>
                            <span class="d-block"><i class="fas fa-calendar-alt"></i> تاريخ الانضمام :  @Model.Student.RegistrationDate.ToString("yyyy/MM/dd")</span>
                        </div>
                       <div >
                            <img style="border-radius:25px;" src="~/images/profile.png" width="250" alt="صورة الطالب" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card p-3 d-flex flex-column justify-content-center align-items-center gap-2">
                    <div class="icon"><i class="fas fa-book-open"></i></div>
                    <h3 class="mb-0">@Model.CompletedCourses</h3>
                    <p>الدورات المكتملة</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card p-3 d-flex flex-column justify-content-center align-items-center gap-2">
                    <div class="icon"><i class="fas fa-certificate"></i></div>
                    <h3 class="mb-0">@Model.CertificatesCount</h3>
                    <p>الشهادات المحصلة</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card p-3 d-flex flex-column justify-content-center align-items-center gap-2">
                    <div class="icon"><i class="fas fa-clock"></i></div>
                    <h3 class="mb-0">@Model.TotalLearningHours</h3>
                    <p>ساعات التعلم</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card p-3 d-flex flex-column justify-content-center align-items-center gap-2">
                    <div class="icon"><i class="fas fa-chart-line"></i></div>
                    <h3 class="mb-0">@Model.AverageGrade%</h3>
                    <p>متوسط الدرجات</p>
                </div>
            </div>
        </div>
        <ul class="nav nav-tabs justify-content-evenly mb-5" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button">نظرة عامة</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="my-courses-tab" data-bs-toggle="tab" data-bs-target="#my-courses" type="button">دوراتي</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="certificates-tab" data-bs-toggle="tab" data-bs-target="#certificates" type="button">الشهادات</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button">الإعدادات</button>
            </li>
        </ul>

        <div class="tab-content" id="myTabContent">

            <div class="tab-pane fade show active" id="overview" role="tabpanel">
                <div class="row g-4 align-items-center">
                    <div class="col-md-8">
                        <div class="card p-3 mb-3 h-auto">
                            <h4 class="mb-3">المعلومات الشخصية</h4>

                            <!-- عرض البيانات بشكل ReadOnly -->
                            <div id="viewProfileSection">
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>الاسم الكامل</label>
                                            <input type="text" class="form-control" value="@Model.Student.FullName" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>رقم الهاتف</label>
                                            <input type="text" class="form-control" value="@Model.Student.PhoneNumber" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>البريد الإلكتروني</label>
                                            <input type="text" class="form-control" value="@Model.Student.Email" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>المدينة</label>
                                            <input type="text" class="form-control" value="@Model.Student.City" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>الدولة</label>
                                            <input type="text" class="form-control" value="@Model.Student.Country" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="profile-card p-0" style="width:fit-content;">
                                    <div class="edit" style="background-color:transparent;">
                                        <button type="button" style="background-color:#0f425e;" class="edit-btn" onclick="toggleEdit()"><i class="fas fa-pen"></i> تعديل الملف</button>
                                </div>
                                </div>
                            </div>

                            <!-- نموذج التعديل -->
                            <form asp-action="UpdateProfile" method="post" id="editProfileSection" class="d-none">
                                <input type="hidden" asp-for="Student.Id" />

                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <label>الاسم الكامل</label>
                                        <input asp-for="Student.FullName" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>رقم الهاتف</label>
                                        <input asp-for="Student.PhoneNumber" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>البريد الإلكتروني</label>
                                        <input asp-for="Student.Email" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>المدينة</label>
                                        <input asp-for="Student.City" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>الدولة</label>
                                        <input asp-for="Student.Country" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>كلمة المرور الجديدة (اختياري)</label>
                                        <input asp-for="Password" type="password" class="form-control" />
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-success mt-3">حفظ التغييرات</button>
                                <button type="button" class="btn btn-secondary mt-3 ms-2" onclick="toggleEdit()">إلغاء</button>
                            </form>

                            <script>
                                function toggleEdit() {
                                    document.getElementById("viewProfileSection").classList.toggle("d-none");
                                    document.getElementById("editProfileSection").classList.toggle("d-none");
                                }
                            </script>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card p-3 h-auto">
                            <h4>إجراءات سريعة</h4>
                            <button class="btn btn-show mb-2 w-100 d-flex justify-content-center align-items-center gap-2">
                                <i class="fas fa-book-open"></i> تصفح الدورات
                            </button>

                            <button class="btn btn-outline-blue w-100 d-flex justify-content-center align-items-center gap-2">
                                <i class="fas fa-file-download"></i> تحميل الشهادات
                            </button>
                        </div>

                        <div class="card p-3 mt-3 h-auto">
                            <h4>ملخص التقدم</h4>
                            <div class="progress mt-3 mb-2">
                                <div class="progress-bar" style="width: 73%">73%</div>
                            </div>
                            <ul class="list-unstyled small d-flex flex-wrap gap-5 justify-content-center mt-4">
                                <li>12 دورة مكتملة</li>
                                <li>3 دورات في التقدم</li>
                                <li>8 شهادات محصلة</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="my-courses" role="tabpanel">

                <div class="row g-4">

                    <div class="col-md-6 col-lg-4">
                        <div class="course-card h-100 shadow-sm">
                            <div class="img">
                                <img src="~/images/science.jpg" class="card-img-top" alt="علوم الطبيعة">
                            </div>
                            <div class="card-body p-4">
                                <h3 class="mb-0">علوم الطبيعة - الفيزياء والكيمياء</h3>
                                <p class="text-blue fs-5 mb-2">أ. فاطمة حسن</p>
                                <div class="d-flex justify-content-between small mb-1">
                                    <span class="text-white">45%</span>
                                    <span class="text-white">التقدم</span>
                                </div>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar bg-blue" style="width: 45%;"></div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-blue">+B</span>
                                    <button class="btn btn-outline-in-progress">في التقدم</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4">
                        <div class="course-card h-100 shadow-sm">
                            <div class="img">
                                <img src="~/images/maths.jpeg" class="card-img-top" alt="الرياضيات المتقدمة">
                            </div>
                            <div class="card-body p-4">
                                <h3 class="mb-0">الرياضيات المتقدمة - الجبر والهندسة</h3>
                                <p class="text-blue fs-5 mb-2">أ. محمد علي</p>
                                <div class="d-flex justify-content-between small mb-1">
                                    <span class="text-white">100%</span>
                                    <span class="text-white">التقدم</span>
                                </div>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar bg-blue" style="width: 100%;"></div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-blue">+A</span>
                                    <button class="btn btn-complete btn-sm">مكتمل</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4">
                        <div class="course-card h-100 shadow-sm">
                            <div class="img">
                                <img src="~/images/arabic.jpg" class="card-img-top" alt="اللغة العربية">
                            </div>
                            <div class="card-body p-4">
                                <h3 class="mb-0">أساسيات اللغة العربية - النحو والصرف</h3>
                                <p class="text-blue fs-5 mb-2">أ. سارة أحمد</p>
                                <div class="d-flex justify-content-between small mb-1">
                                    <span class="text-white">75%</span>
                                    <span class="text-white">التقدم</span>
                                </div>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar bg-blue" style="width: 75%;"></div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-blue">A</span>
                                    <button class="btn btn-outline-in-progress">في التقدم</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="tab-pane fade" id="certificates" role="tabpanel">
                <h3 class="title text-center mb-5">شهاداتي</h3>
                <div class="row g-4">
                    <div class="col-12">
                        <div class="certificate-card">
                            <div class="d-flex flex-column flex-md-row justify-content-center justify-content-md-between">
                                <div class="left d-flex justify-content-center align-items-center gap-3">
                                    <div class="icon"><i class="fas fa-certificate"></i></div>
                                    <div class="content">
                                        <h4>شهادة إتمام دورة الرياضيات المتقدمة</h4>
                                        <p class="text-white mb-0">الرياضيات المتقدمة - الجبر والهندسة</p>
                                        <span>أ. محمد علي</span>
                                    </div>
                                </div>
                                <div class="right d-flex flex-column justify-content-center align-items-center mt-4 mt-lg-0">
                                    <p class="mb-0">92%</p>
                                    <p class="text-white">28-6-2024</p>
                                </div>
                            </div>
                            <div class="buttons my-3 d-flex flex-wrap justify-content-center gap-3">
                                <button class="download-btn d-flex justify-content-center align-items-center gap-2">
                                    <i class="fas fa-download"></i> تحميل
                                </button>

                                <button class="show-btn d-flex justify-content-center align-items-center gap-2">
                                    <i class="fas fa-eye"></i> عرض
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="settings" role="tabpanel">
                <div class="danger-card p-3 shadow-lg">
                    <h3 class="fs-4 text-danger mb-3">منطقة الخطر</h3>

                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        <button class="btn btn-danger w-50 d-flex justify-content-center align-items-center gap-2">
                            <i class="fas fa-sign-out-alt"></i> تسجيل الخروج
                        </button>

                        <button class="btn btn-outline-danger w-50">
                            حذف الحساب
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>