@model Albayan.ViewModels.PublicCoursesViewModel

@{
    ViewData["Title"] = "الدورات المسجلة";
    Layout = "_Layout";
}

<section class="section-padding recorded-lessons" id="recorded-lessons">
    <div class="container">
        <div class="heading text-center mb-4">
            <h2 class="title">الدورات المسجلة</h2>
            <p class="description">تعلم في أي وقت ومن أي مكان مع مجموعة شاملة من الدورات المسجلة عالية الجودة</p>
        </div>

        <!-- Filter Form -->
        <form asp-action="Index" method="get">
            <div class="mt-5 filter-bar d-flex flex-wrap column-gap-2 row-gap-3 align-items-center justify-content-center justify-content-lg-evenly">
                <select asp-for="SelectedGradeId" asp-items="@Model.Grades" class="form-select">
                    <option value="">جميع الصفوف</option>
                </select>
                <select asp-for="SelectedSubjectId" asp-items="@Model.Subjects" class="form-select">
                    <option value="">جميع المواد</option>
                </select>
                <div class="position-relative form-search">
                    <input asp-for="SearchTerm" type="text" class="form-control" placeholder="ابحث عن دورة..." />
                    <i class="fas fa-search search-icon"></i>
                </div>
                <button type="submit" class="btn filter-btn">
                    <i class="fas fa-filter"></i>
                    تطبيق الفلاتر
                </button>
            </div>
        </form>

        <div class="row g-4 mt-5">
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="course">
                        <div class="img">
                            <img src="@(string.IsNullOrEmpty(course.CoverImageUrl) ? $"https://placehold.co/600x400/0d6efd/ffffff?text={course.Title}" : course.CoverImageUrl)" alt="@course.Title">
                            <div class="badge">@course.AverageRating.ToString("0.0") <i class="fas fa-star text-warning me-2"></i></div>
                        </div>
                        <div class="p-4">
                            <h3>@course.Title</h3>
                            <span class="teacher-name">@course.TeacherName</span>
                            <p>@course.Description</p>
                            <div class="icons d-flex justify-content-between align-items-center">
                                <div class="icon1">
                                    <i class="fas fa-clock"></i>
                                    <span class="d-inline-block me-1 text-white">@course.TotalHours ساعة</span>
                                </div>
                                <div class="icon2">
                                    <i class="fas fa-book ms-1"></i>
                                    <span class="d-inline-block text-white">@course.LessonsCount درس</span>
                                </div>
                            </div>
                            <div class="d-flex flex-wrap gap-3 mt-3">
                                <a asp-controller="CoursePlayer" asp-action="Index" asp-route-courseId="@course.Id" class="btn see-btn d-flex justify-content-center flex-fill align-items-center">ابدأ التعلم</a>
                                <a asp-controller="Exam" asp-action="Take" asp-route-id="@course.Id" class="btn download-btn flex-fill">ابدأ الاختبار</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (!Model.Courses.Any())
            {
                <div class="col-12">
                    <p class="text-center text-muted">لا توجد دورات تطابق معايير البحث الحالية.</p>
                </div>
            }
        </div>
    </div>
</section>
