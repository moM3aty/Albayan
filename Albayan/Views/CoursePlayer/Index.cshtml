@model Albayan.ViewModels.CoursePlayerViewModel

@{
    ViewData["Title"] = Model.CourseTitle;
    Layout = "_Layout";
}

<style>
    :root {
        --dark-bg: #0d1117;
        --panel-bg: #161b22;
        --text-primary: #e6edf3;
        --text-secondary: #8b949e;
        --accent: #1eaad4;
        --border: #30363d;
        --danger: #ff7b72;
        --success: #2ea043;
    }

    body {
        background-color: var(--dark-bg);
    }

    .course-layout {
        display: grid;
        grid-template-columns: 320px 1fr;
    }

    .sidebar {
        background-color: var(--panel-bg);
        border-left: 1px solid var(--border);
        padding: 1.5rem;
        overflow-y: auto;
    }

    .sidebar h2 {
        color: var(--text-primary);
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }

    .lesson-item {
        background-color: transparent;
        border: 1px solid var(--border);
        padding: 0.7rem 1rem;
        border-radius: 6px;
        margin-bottom: 0.5rem;
        color: var(--text-secondary);
        cursor: pointer;
        transition: 0.2s;
    }

    .lesson-item:hover,
    .lesson-item.active {
        background-color: var(--accent);
        color: white;
        font-weight: bold;
    }

    .main-content {
        padding: 2rem;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
    }

    .video-wrapper {
        position: relative;
        padding-top: 56.25%;
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 2rem;
        box-shadow: 0 0 10px #0004;
    }

    .video-wrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .nav-controls {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .nav-controls a,
    .nav-controls button {
        padding: 0.5rem 1.25rem;
        border-radius: 6px;
        font-weight: bold;
    }

    .section-box {
        background-color: var(--panel-bg);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
        color: var(--text-primary);
        font-size: 1.1rem;
    }

    .text-muted{
        color:#fff !important;
    }
    .section-header i {
        color: var(--accent);
    }

    .section-body {
        color: var(--text-secondary);
    }

    .attachments-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .attachments-list li {
        margin-bottom: 0.75rem;
    }

    .attachments-list a {
        color: var(--accent);
        text-decoration: none;
    }

    .attachments-list a:hover {
        text-decoration: underline;
    }

    .submission-summary {
        background-color: #1e2a35;
        border-left: 4px solid var(--success);
        padding: 1rem;
        border-radius: 6px;
        color: var(--text-primary);
        line-height: 1.6;
    }

    .back-button {
        margin-bottom: 2rem;
    }

    .btn-back {
        background-color: transparent;
        border: 1px solid var(--border);
        color: var(--text-secondary);
        padding: 0.5rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        transition: 0.2s;
    }

    .btn-back:hover {
        color: var(--text-primary);
        border-color: var(--accent);
    }

    @@media (max-width: 768px) {
        .course-layout {
            display: block;
        }

        .sidebar {
            width: 100%;
            max-height: 250px;
            overflow-y: auto;
        }

        .main-content {
            padding: 1rem;
        }
    }
</style>

<div class="course-layout">
    <div class="sidebar">
        <h2>@Model.CourseTitle</h2>
        @foreach (var lesson in Model.AllLessons)
        {
            <div class="lesson-item @(lesson.Id == Model.CurrentLesson.Id ? "active" : "")"
                 onclick="window.location.href='/CoursePlayer/Index/@Model.CourseId?lessonId=@lesson.Id'">
                <i class="fas fa-play-circle me-2"></i> @lesson.Title
            </div>
        }
    </div>

    <div class="main-content">
        <div class="back-button">
            <a href="/Profile" style="display:flex; align-items:center; gap:5px;width:fit-content" class="btn-back"><i class="fas fa-arrow-right"></i> العودة إلى الملف الشخصي</a>
        </div>

        <div class="video-wrapper">
            <iframe src="https://iframe.mediadelivery.net/embed/@Model.CurrentLesson.BunnyVideoLibraryId/@Model.CurrentLesson.BunnyVideoId?autoplay=true"
                    allowfullscreen allow="autoplay; encrypted-media;"></iframe>
        </div>

        <div class="nav-controls">
            @if (Model.PreviousLessonId.HasValue)
            {
                <a asp-action="Index" asp-route-courseId="@Model.CourseId" asp-route-lessonId="@Model.PreviousLessonId" class="btn btn-outline-light">الدرس السابق</a>
            }
            else
            {
                <button class="btn btn-outline-light" disabled>الدرس السابق</button>
            }

            <div class="sidebar-footer-pro" id="exam-button-container" style="display: @(Model.IsCourseCompleted ? "block" : "none");">
                <a asp-controller="Exam" asp-action="Take" asp-route-id="@Model.CourseId" class="btn btn-success w-100 fw-bold"><i class="fas fa-file-alt me-2"></i> ابدأ الاختبار النهائي</a>
            </div>
            @if (Model.NextLessonId.HasValue)
            {
                <a asp-action="Index" asp-route-courseId="@Model.CourseId" asp-route-lessonId="@Model.NextLessonId" class="btn btn-primary">الدرس التالي</a>
            }
            else
            {
                <p class="text-center text-white-50 small">لقد أكملت جميع دروس الدورة!</p>
            }
        </div>
       
       
        <div class="row g-4">
            <!-- Attachments Card -->
            <div class="col-md-4">
                <div class="section-box h-100">
                    <div class="section-header">
                        <i class="fas fa-paperclip"></i>
                        <span>المرفقات</span>
                    </div>
                    <div class="section-body">
                        @if (Model.LessonDetails.Attachments.Any())
                        {
                            <ul class="attachments-list">
                                @foreach (var attachment in Model.LessonDetails.Attachments)
                                {
                                    <li>
                                        <i class="fas fa-file-alt me-2 text-info"></i>
                                        <a href="@attachment.FilePath" download>@attachment.FileName</a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">لا توجد مرفقات لهذا الدرس.</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Homework Info Card -->
            <div class="col-md-4">
                <div class="section-box h-100">
                    <div class="section-header">
                        <i class="fas fa-tasks"></i>
                        <span>الواجب الدراسي</span>
                    </div>
                    <div class="section-body">
                        @if (!string.IsNullOrEmpty(Model.CurrentLesson.HomeworkTitle))
                        {
                            <h5 class="text-info mb-2">@Model.CurrentLesson.HomeworkTitle</h5>
                            <p class="text-white">@Model.CurrentLesson.HomeworkDescription</p>

                            @if (Model.LessonDetails.StudentSubmission != null)
                            {
                                <div class="submission-summary">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <strong>تم التسليم:</strong> @Model.LessonDetails.StudentSubmission.SubmissionDate.ToString("g")<br />
                                    <strong>الدرجة:</strong> @(Model.LessonDetails.StudentSubmission.Grade?.ToString() ?? "لم يتم التقييم بعد")<br />
                                    <strong>ملاحظات:</strong> @(Model.LessonDetails.StudentSubmission.Feedback ?? "لا يوجد")
                                </div>
                            }
                            else
                            {
                                <div class="text-muted">لم تقم بتسليم الواجب بعد.</div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">لا يوجد واجب لهذا الدرس.</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Homework Submission Card -->
            @if (!string.IsNullOrEmpty(Model.CurrentLesson.HomeworkTitle) && Model.LessonDetails.StudentSubmission == null)
            {
                <div class="col-md-4">
                    <div class="section-box h-100">
                        <div class="section-header">
                            <i class="fas fa-upload"></i>
                            <span>رفع الواجب</span>
                        </div>
                        <div class="section-body">
                            <form asp-action="SubmitHomework" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="courseId" value="@Model.CourseId" />
                                <input type="hidden" name="lessonId" value="@Model.CurrentLesson.Id" />
                                <div class="mb-3">
                                    <label class="form-label text-white">اختر ملف الواجب</label>
                                    <input style="height:35px;" type="file" name="SubmittedFile" class="form-control" required />
                                </div>
                                <button type="submit" class="btn btn-info w-100 fw-bold">تسليم الواجب</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
