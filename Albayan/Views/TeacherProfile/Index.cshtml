@* @functions {
    // Helper function to render star ratings dynamically
    public Microsoft.AspNetCore.Html.IHtmlContent RenderStars(double rating)
    {
        var starsHtml = new System.Text.StringBuilder();
        for (int i = 1; i <= 5; i++)
        {
            if (i <= rating)
            {
                starsHtml.Append("<i class='fas fa-star'></i>");
            }
            else if (i - 0.5 <= rating)
            {
                starsHtml.Append("<i class='fas fa-star-half-alt'></i>");
            }
            else
            {
                starsHtml.Append("<i class='far fa-star'></i>");
            }
        }
        return new Microsoft.AspNetCore.Html.HtmlString(starsHtml.ToString());
    }
}

