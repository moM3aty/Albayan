<!-- Profile Header -->
<section class="profile-header-pro text-white pt-5 pb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-3 text-center">
                <img src="@(string.IsNullOrEmpty(Model.Teacher.ProfileImageUrl) ? "https://placehold.co/160x160/ffffff/0d6efd?text=Teacher" : Model.Teacher.ProfileImageUrl)"
                     alt="@Model.Teacher.FullName"
                     class="img-fluid rounded-circle profile-pic-pro mx-auto">
            </div>
            <div class="col-md-9 text-center text-md-end mt-4 mt-md-0">
                <h1 class="display-4 fw-bold">@Model.Teacher.FullName</h1>
                <p class="h5 text-white-50">@Model.Teacher.JobTitle</p>
                <div class="d-flex align-items-center justify-content-center justify-content-md-start mt-3 fs-5 text-warning">
                    @RenderStars(Model.AverageRating)
                    <span class="text-white me-2">@Model.AverageRating.ToString("0.0") (@Model.RatingsCount تقييم)</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Profile Body -->
<section class="py-5">
    <div class="container">
        <!-- Stats Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-3 col-6">
