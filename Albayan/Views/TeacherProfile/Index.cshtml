                        <p class="card-text text-muted lh-lg">@Model.Teacher.ExperienceSummary</p>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="courses" role="tabpanel" aria-labelledby="courses-tab">
                <div class="row g-4">
                    @foreach (var course in Model.Courses)
                    {
                        <div class="col-md-6">
                            <div class="card h-100 shadow-sm border-0 course-card-pro">
                                <img src="@(string.IsNullOrEmpty(course.CoverImageUrl) ? "https://placehold.co/600x400/0d6efd/ffffff?text=Course" : course.CoverImageUrl)"
                                     class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <p class="text-primary small">@course.SubjectName</p>
                                    <h5 class="card-title fw-bold">@course.Title</h5>
                                </div>
                                <div class="card-footer bg-light d-flex justify-content-between text-muted">
                                    <span><i class="fas fa-book-open ms-2"></i>@course.LessonsCount درس</span>
                                    <span><i class="fas fa-clock ms-2"></i>@course.TotalHours ساعة</span>
                                </div>
                            </div>
                        </div>
                    }
                    @if (!Model.Courses.Any())
                    {
                        <p class="text-muted">لا توجد دورات مقدمة من هذا المعلم حالياً.</p>
                    }
                </div>
            </div>

            <div class="tab-pane fade" id="ratings" role="tabpanel" aria-labelledby="ratings-tab">
                <div class="row g-4">
                    <div class="col-lg-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-body p-4">
                                <h5 class="card-title fw-bold mb-3">أضف تقييمك</h5>
                                <form asp-action="SubmitRating" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" asp-for="NewRating.TeacherId" value="@Model.Teacher.Id" />
                                    <div class="rating-stars d-flex flex-row-reverse justify-content-center mb-2">
                                        <input type="radio" id="star5" asp-for="NewRating.Rating" value="5" /><label for="star5" title="5 نجوم">★</label>
                                        <input type="radio" id="star4" asp-for="NewRating.Rating" value="4" /><label for="star4" title="4 نجوم">★</label>
                                        <input type="radio" id="star3" asp-for="NewRating.Rating" value="3" /><label for="star3" title="3 نجوم">★</label>
                                        <input type="radio" id="star2" asp-for="NewRating.Rating" value="2" /><label for="star2" title="2 نجوم">★</label>
                                        <input type="radio" id="star1" asp-for="NewRating.Rating" value="1" /><label for="star1" title="1 نجمة">★</label>
                                    </div>
                                    <span asp-validation-for="NewRating.Rating" class="text-danger small d-block text-center mb-3"></span>

                                    <div class="mb-3">
                                        <textarea asp-for="NewRating.Comment" class="form-control" rows="3" placeholder="أضف تعليقك (اختياري)"></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100">إرسال التقييم</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <h5 class="fw-bold mb-3">أحدث التقييمات</h5>
                        <div class="vstack gap-3">
                            @foreach (var rating in Model.RecentRatings)
                            {
                                <div class="d-flex bg-white p-3 rounded shadow-sm border-0">
                                    <img src="https://placehold.co/50x50/0d6efd/ffffff?text=@rating.Student.FullName.Substring(0, 1)" class="rounded-circle" style="width: 50px; height: 50px;" />
                                    <div class="me-3">
                                        <p class="fw-bold mb-0">@rating.Student.FullName</p>
                                        <div class="text-warning my-1">@RenderStars(rating.Rating)</div>
                                        <p class="text-muted mb-0">@rating.Comment</p>
                                        <small class="text-muted">@rating.RatingDate.ToShortDateString()</small>
                                    </div>
                                </div>
                            }
                            @if (!Model.RecentRatings.Any())
                            {
                                <p class="text-muted">لا توجد تقييمات لهذا المعلم حالياً.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

