@model Albayan.ViewModels.ExamResultViewModel

@{
    ViewData["Title"] = "نتيجة الاختبار";
}

<section class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card text-center p-4 shadow-lg">
                    @if (Model.Passed)
                    {
                        <div class="card-body text-success">
                            <i class="fas fa-check-circle fa-4x mb-3"></i>
                            <h2 class="card-title">تهانينا! لقد اجتزت الاختبار بنجاح</h2>
                            <p class="lead">دورة: @Model.CourseTitle</p>
                            <hr />
                            <h4>درجتك النهائية: @Model.Score%</h4>
                            <p>درجة النجاح المطلوبة: @Model.PassPercentage%</p>
                            <a asp-controller="Certificate" asp-action="Details" asp-route-id="@Model.CertificateGuid" target="_blank" class="btn btn-success mt-3">
                                <i class="fas fa-certificate me-2"></i> عرض الشهادة
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="card-body text-danger">
                            <i class="fas fa-times-circle fa-4x mb-3"></i>
                            <h2 class="card-title">للأسف، لم تجتز الاختبار</h2>
                            <p class="lead">دورة: @Model.CourseTitle</p>
                            <hr />
                            <h4>درجتك النهائية: @Model.Score%</h4>
                            <p>درجة النجاح المطلوبة: @Model.PassPercentage%</p>
                            <p class="mt-3">لا تقلق، يمكنك مراجعة الدورة والمحاولة مرة أخرى!</p>
                        </div>
                    }
                    <div class="card-footer bg-transparent border-0 mt-3">
                        <a asp-action="Review" asp-route-attemptId="@Model.AttemptId" class="btn btn-info">عرض الإجابات</a>
                        <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-secondary">العودة إلى الملف الشخصي</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>