@model Albayan.ViewModels.TakeExamViewModel

@{
    ViewData["Title"] = $"اختبار: {Model.CourseTitle}";
    Layout = "_Layout"; // Or your main front-end layout
}

<section class="section-padding">
    <div class="container">
        <div class="heading text-center mb-5">
            <h2 class="title">@ViewData["Title"]</h2>
            <p class="text-lg text-white text-md-center">أجب على الأسئلة التالية لاجتياز الدورة.</p>
        </div>

        <div class="quiz-container">
            <form asp-action="Submit" method="post" id="quizForm" class="quiz-form">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CourseId" />

                <!-- Questions Container -->
                <div class="relative">
                    @if (Model.Questions != null && Model.Questions.Any())
                    {
                        @for (int i = 0; i < Model.Questions.Count; i++)
                        {
                            var question = Model.Questions[i];
                            <div class="question-card quiz-card p-4 mb-3" data-index="@i" style="@(i == 0 ? "" : "display:none;")">
                                <h3 class="text-xl text-white font-semibold mb-5">@(i + 1). @question.QuestionText</h3>
                                <div class="mt-3 space-y-3">
                                    <label class="form-check-label text-white d-block"><input type="radio" name="StudentAnswers[@question.Id]" value="A" class="form-check-input ms-2"> @question.OptionA</label>
                                    <label class="form-check-label text-white d-block"><input type="radio" name="StudentAnswers[@question.Id]" value="B" class="form-check-input ms-2"> @question.OptionB</label>
                                    <label class="form-check-label text-white d-block"><input type="radio" name="StudentAnswers[@question.Id]" value="C" class="form-check-input ms-2"> @question.OptionC</label>
                                    <label class="form-check-label text-white d-block"><input type="radio" name="StudentAnswers[@question.Id]" value="D" class="form-check-input ms-2"> @question.OptionD</label>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-danger">لا توجد أسئلة في هذا الاختبار حالياً.</p>
                    }
                </div>

                <!-- Navigation Buttons -->
                @if (Model.Questions != null && Model.Questions.Any())
                {
                    <div class="d-flex justify-content-between mt-4">
                        <button type="button" class="btn btn-secondary"  id="prevBtn" disabled>السابق</button>
                        <button type="button" class="btn btn-next" id="nextBtn">التالي</button>
                        <button type="submit" class="btn btn-success " id="submitBtn" style="display:none;">إنهاء الاختبار</button>
                    </div>
                }
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const questions = document.querySelectorAll('.question-card');
            if (questions.length === 0) return;

            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const submitBtn = document.getElementById('submitBtn');
            let currentIndex = 0;
            const totalQuestions = questions.length;

            function updateButtons() {
                prevBtn.disabled = currentIndex === 0;

                if (currentIndex === totalQuestions - 1) {
                    nextBtn.style.display = 'none';
                    submitBtn.style.display = 'inline-block';
                } else {
                    nextBtn.style.display = 'inline-block';
                    submitBtn.style.display = 'none';
                }
            }

            function showQuestion(index) {
                questions.forEach((q, i) => {
                    q.style.display = (i === index) ? 'block' : 'none';
                });
                currentIndex = index;
                updateButtons();
            }

            nextBtn.addEventListener('click', () => {
                if (currentIndex < totalQuestions - 1) {
                    showQuestion(currentIndex + 1);
                }
            });

            prevBtn.addEventListener('click', () => {
                if (currentIndex > 0) {
                    showQuestion(currentIndex - 1);
                }
            });

            // Initial setup
            showQuestion(0);
        });
    </script>
}
