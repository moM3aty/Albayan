@model Albayan.ViewModels.TakeExamViewModel

@{
    ViewData["Title"] = $"اختبار: {Model.CourseTitle}";
}

<style>
    .quiz-container {
        max-width: 800px;
        margin: auto;
    }

    .quiz-card {
        background-color: #111827;
        border: 1px solid #1f2937;
        border-radius: 12px;
    }

    .form-check-label {
        padding: 1rem;
        border: 1px solid #374151;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.2s, border-color 0.2s;
    }

    .form-check-input {
        display: none;
    }

        .form-check-input:checked + .form-check-label {
            background-color: #1eaad4;
            border-color: #1eaad4;
            color: white;
        }

    .form-check-label:hover {
        background-color: #1f2937;
    }

    .btn-next {
        background-color: #1eaad4;
        border-color: #1eaad4;
        color: white;
    }

        .btn-next:hover {
            background-color: #1895b8;
            border-color: #1895b8;
        }
</style>

<section class="section-padding">
    <div class="container">
        <div class="heading text-center mb-5">
            <h2 class="title">@ViewData["Title"]</h2>
            <p class="text-lg text-white text-md-center">أجب على الأسئلة التالية لاجتياز الدورة.</p>
        </div>

        <div class="quiz-container">
            <form asp-action="Submit" method="post" id="quizForm" class="quiz-form">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CourseId" />

                <!-- Questions Container -->
                <div class="relative">
                    @if (Model.Questions != null && Model.Questions.Any())
                    {
                        @for (int i = 0; i < Model.Questions.Count; i++)
                        {
                            var question = Model.Questions[i];
                            <div class="question-card quiz-card p-4 mb-3" data-index="@i" style="@(i == 0 ? "" : "display:none;")">
                                <h3 class="text-xl text-white font-semibold mb-5">@(i + 1). @question.QuestionText</h3>
                                <div class="mt-3 space-y-3">
                                    <input type="radio" name="StudentAnswers[@question.Id]" id="q@(question.Id)oA" value="A" class="form-check-input" required>
                                    <label for="q@(question.Id)oA" class="form-check-label text-white d-block">@question.OptionA</label>

                                    <input type="radio" name="StudentAnswers[@question.Id]" id="q@(question.Id)oB" value="B" class="form-check-input">
                                    <label for="q@(question.Id)oB" class="form-check-label text-white d-block">@question.OptionB</label>

                                    @if (question.NumberOfOptions >= 3 && !string.IsNullOrEmpty(question.OptionC))
                                    {
                                        <input type="radio" name="StudentAnswers[@question.Id]" id="q@(question.Id)oC" value="C" class="form-check-input">
                                        <label for="q@(question.Id)oC" class="form-check-label text-white d-block">@question.OptionC</label>
                                    }

                                    @if (question.NumberOfOptions >= 4 && !string.IsNullOrEmpty(question.OptionD))
                                    {
                                        <input type="radio" name="StudentAnswers[@question.Id]" id="q@(question.Id)oD" value="D" class="form-check-input">
                                        <label for="q@(question.Id)oD" class="form-check-label text-white d-block">@question.OptionD</label>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-danger">لا توجد أسئلة في هذا الاختبار حالياً.</p>
                    }
                </div>

                <!-- Navigation Buttons -->
                @if (Model.Questions != null && Model.Questions.Any())
                {
                    <div class="d-flex justify-content-between mt-4">
                        <button type="button" class="btn btn-secondary" id="prevBtn" disabled>السابق</button>
                        <button type="button" class="btn btn-next" id="nextBtn">التالي</button>
                        <button type="submit" class="btn btn-success" id="submitBtn" style="display:none;">إنهاء الاختبار</button>
                    </div>
                }
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const questions = document.querySelectorAll('.question-card');
            if (questions.length === 0) return;

            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const submitBtn = document.getElementById('submitBtn');
            let currentIndex = 0;
            const totalQuestions = questions.length;

            function updateButtons() {
                prevBtn.disabled = currentIndex === 0;

                if (currentIndex === totalQuestions - 1) {
                    nextBtn.style.display = 'none';
                    submitBtn.style.display = 'inline-block';
                } else {
                    nextBtn.style.display = 'inline-block';
                    submitBtn.style.display = 'none';
                }
            }

            function showQuestion(index) {
                questions.forEach((q, i) => {
                    q.style.display = (i === index) ? 'block' : 'none';
                });
                currentIndex = index;
                updateButtons();
            }

            nextBtn.addEventListener('click', () => {
                if (currentIndex < totalQuestions - 1) {
                    showQuestion(currentIndex + 1);
                }
            });

            prevBtn.addEventListener('click', () => {
                if (currentIndex > 0) {
                    showQuestion(currentIndex - 1);
                }
            });

            showQuestion(0);
        });
    </script>
}
