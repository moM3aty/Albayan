@model Albayan.ViewModels.UserCertificateViewModel

<div class="certificate-card">
    <div class="d-flex flex-column flex-md-row justify-content-center justify-content-md-between align-items-center">
        <div class="left d-flex align-items-center gap-3">
            <div class="icon"><i class="fas fa-certificate"></i></div>
            <div class="content">
                <h4>شهادة إتمام دورة @Model.CourseTitle</h4>
                <p class="text-white mb-0">المعلم: @Model.TeacherName</p>
                <span>تاريخ الإصدار: @Model.IssueDate.ToString("dd MMMM, yyyy")</span>
            </div>
        </div>
        <div class="right d-flex flex-column justify-content-center align-items-center mt-4 mt-md-0">
            <p class="mb-0 fs-4 fw-bold">@Model.GradePercentage%</p>
            <p class="text-white">الدرجة النهائية</p>
        </div>
    </div>
    <div class="buttons my-3 d-flex flex-wrap justify-content-center gap-3 border-top pt-3 mt-3">
        <a asp-controller="Certificate" asp-action="Details" asp-route-id="@Model.CertificateGuid" target="_blank" class="show-btn d-flex justify-content-center align-items-center gap-2" style="text-decoration:none;">
            <i class="fas fa-eye"></i> عرض
        </a>
    </div>
</div>
