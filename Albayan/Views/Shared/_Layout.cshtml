                        <div class="d-flex flex-wrap gap-3 justify-content-center justify-content-lg-start">

                                <a class="gradient-btn text-decoration-none" href="~/Account/Login">
                                <i class="fas fa-play play-icon"></i>
                                <span>ابدأ التعلم الآن</span>
                            </a>

                            <a class="outline-btn text-decoration-none" href="#statements">
                                تصفح المقررات
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image">
                        <img src="~/images/header1.png" alt="Graduate Student">
                        <img class="hero-bottom " src="https://cdn.prod.website-files.com/66b9438575655d43afbfb651/66baff1b30cd4df12398d271_Overlay%20Down%20Author.svg" alt="">
                    </div>
