                    <img src="~/images/logo.png" height="100" alt="logo">
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <i class="fas fa-bars" aria-hidden="true"></i>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav d-flex justify-content-center text-center mx-auto align-items-center d-flex gap-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">الرئيسية</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="about">من نحن</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="stages">المراحل الدراسية</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="teachers">المعلمون</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="statements">سلسلة البيان</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Blog" asp-action="Index">المدونة</a>
                    </li>
                </ul>


                <div class="d-flex justify-content-center align-items-center mt-2 mt-xl-0">
                @if (SignInManager.IsSignedIn(User))
                {
                   
                        <div class="d-flex justify-content-center align-items-center me-3 mt-3">
                            <a class="nav-link fs-1" asp-controller="Profile" asp-action="index" ><i class="fas fa-user-circle"></i></a>
                        </div>
                    <form class="m-2" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-login">تسجيل الخروج</button>
                        </form>
                }
                else
                {
                        <a class="btn btn-login" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path"><i class="fas fa-user-graduate me-1"></i> تسجيل دخول </a>
                    }
                </div>
                
            </div>
        </div>
    </nav>
    @if (ViewData["Title"] == "الصفحة الرئيسيه"){
    <header id="home">

        <div class="container hero-container">
            <div class="row g-4">
