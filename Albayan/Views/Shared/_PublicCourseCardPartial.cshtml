@model Albayan.ViewModels.CourseCardViewModel

<div class="course h-100">
    <div class="img">
        <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? $"https://placehold.co/600x400/0d6efd/ffffff?text={Model.Title}" : Model.CoverImageUrl)" alt="@Model.Title">
        <div class="badge">@Model.AverageRating.ToString("0.0") <i class="fas fa-star text-warning me-2"></i></div>
    </div>
    <div class="p-4 d-flex flex-column">
        <h3>@Model.Title</h3>
        <span class="teacher-name">@Model.TeacherName</span>
        <p>@Model.Description</p>
        <div class="icons d-flex justify-content-between align-items-center mt-auto">
            <div class="icon1">
                <i class="fas fa-clock"></i>
                <span class="d-inline-block me-1 text-white">@Model.TotalHours ساعة</span>
            </div>
            <div class="icon2">
                <i class="fas fa-book ms-1"></i>
                <span class="d-inline-block text-white">@Model.LessonsCount درس</span>
            </div>
        </div>
        <div class="d-flex flex-wrap gap-3 mt-3">
            <a asp-controller="CoursePlayer" asp-action="Index" asp-route-courseId="@Model.Id" class="btn see-btn d-flex justify-content-center flex-fill align-items-center">ابدأ التعلم</a>
            <a asp-controller="Exam" asp-action="Take" asp-route-id="@Model.Id" class="btn download-btn flex-fill">ابدأ الاختبار</a>
        </div>
    </div>
</div>
