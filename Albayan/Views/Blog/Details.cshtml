@model Albayan.Areas.Admin.Models.Entities.BlogPost
@using Albayan.Helpers

@{
    ViewData["Title"] = Model.Title;
    var keywords = Model.Keywords?.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries) ?? Array.Empty<string>();
}

<style>
    .article-wrapper {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        padding: 40px;
        margin: 50px;
    }

    .article-header h1 {
        font-size: 2.8rem;
        font-weight: 700;
        color: #1a2a46;
        line-height: 1.3;
    }

    .article-meta {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 30px;
    }

        .article-meta i {
            color: #07386e;
        }

    .article-image {
        width: 100%;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    .article-content {
        font-size: 1.1rem;
        line-height: 1.9;
        color: #343a40;
    }

        .article-content h2, .article-content h3 {
            color: #1a2a46;
            margin-top: 2em;
            margin-bottom: 0.8em;
            font-weight: 600;
        }

        .article-content a {
            color: #07386e;
            text-decoration: none;
            font-weight: 600;
        }

            .article-content a:hover {
                text-decoration: underline;
            }

    .tags-section {
        border-top: 1px solid #e9ecef;
        padding-top: 20px;
        margin-top: 40px;
    }

    .tag-pill {
        background-color: #e9ecef;
        color: #495057;
        padding: 8px 15px;
        border-radius: 50px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        .tag-pill:hover {
            background-color: #07386e;
            color: #ffffff;
        }

    .back-to-blog-btn {
        display: flex;
        font-weight: 600;
        color: #07386e;
        text-decoration: none;
        padding: 10px 20px;
        border: 2px solid #07386e;
        border-radius: 50px;
        transition: all 0.3s ease;
        align-items: center;
        gap: 5px;
        width: fit-content;
        margin: auto;
    }

        .back-to-blog-btn:hover {
            background-color: #07386e;
            color: #ffffff;
        }
</style>

<section class="blog-details-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="article-wrapper">
                    <article class="blog-post-full">
                        <div class="article-header text-center">
                            <h1 class="mb-3">@Model.Title</h1>
                            <div class="article-meta">
                                <i class="fas fa-calendar-alt me-2"></i>
                                <span>تاريخ النشر: @Model.PublishDate.ToString("dd MMMM, yyyy")</span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img class="article-image" src="@Model.ImageUrl" alt="@Model.Title" />
                        }

                        <section class="article-content">
                            @Html.Raw(Model.Content)
                        </section>

                        @if (keywords.Any())
                        {
                            <div class="tags-section">
                                <ul class="list-unstyled d-flex flex-wrap gap-3">
                                    @foreach (var keyword in keywords)
                                    {
                                        <li><span class="tag-pill">#@keyword.Trim()</span></li>
                                    }
                                </ul>
                            </div>
                        }

                        <div class="mt-5 text-center">
                            <a asp-controller="Blog" asp-action="Index" class="back-to-blog-btn">
                                <i class="fas fa-arrow-right me-2"></i>
                                العودة إلى المدونة
                            </a>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            function toArabicNumerals(str) {
                if (str === null || str === undefined) return '';
                return str.toString()
                    .replace(/0/g, '٠').replace(/1/g, '١').replace(/2/g, '٢')
                    .replace(/3/g, '٣').replace(/4/g, '٤').replace(/5/g, '٥')
                    .replace(/6/g, '٦').replace(/7/g, '٧').replace(/8/g, '٨')
                    .replace(/9/g, '٩');
            }

            const elementsToConvert = document.querySelectorAll('.article-content');
            elementsToConvert.forEach(el => {
                Array.from(el.childNodes).forEach(node => {
                    if (node.nodeType === Node.TEXT_NODE) {
                        if (/\d/.test(node.textContent)) {
                            node.textContent = toArabicNumerals(node.textContent);
                        }
                    }
                });
            });
        });
    </script>
}
