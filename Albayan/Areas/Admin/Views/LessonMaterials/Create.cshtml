@model Albayan.Areas.Admin.Models.ViewModels.LessonMaterialFormViewModel

@{
    ViewData["Title"] = "إضافة درس جديد";
}

<div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">إضافة درس جديد</h2>
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="card-bg p-6 rounded-lg space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-400 mb-4"></div>
            <input type="hidden" asp-for="LessonMaterial.UploadDate" />

            <div>
                <label asp-for="LessonMaterial.Title" class="block mb-2 text-sm font-medium"></label>
                <input asp-for="LessonMaterial.Title" class="input-style w-full p-2.5" />
                <span asp-validation-for="LessonMaterial.Title" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div>
                <label asp-for="LessonMaterial.SubjectId" class="block mb-2 text-sm font-medium"></label>
                <select asp-for="LessonMaterial.SubjectId" class="input-style w-full p-2.5" asp-items="@Model.Subjects">
                    <option value="">-- اختر المادة --</option>
                </select>
                <span asp-validation-for="LessonMaterial.SubjectId" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div>
                <label asp-for="LessonMaterial.Description" class="block mb-2 text-sm font-medium"></label>
                <textarea asp-for="LessonMaterial.Description" class="input-style w-full p-2.5" rows="4"></textarea>
                <span asp-validation-for="LessonMaterial.Description" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="CoverImage" class="block mb-2 text-sm font-medium"></label>
                    <input asp-for="CoverImage" type="file" class="input-style w-full p-2.5" accept="image/*" />
                    <span asp-validation-for="CoverImage" class="text-red-400 mt-2 text-xs"></span>
                </div>
                <div>
                    <label asp-for="PdfFile" class="block mb-2 text-sm font-medium"></label>
                    <input asp-for="PdfFile" type="file" class="input-style w-full p-2.5" accept=".pdf" />
                    <span asp-validation-for="PdfFile" class="text-red-400 mt-2 text-xs"></span>
                </div>
            </div>

            <div class="flex items-center justify-end space-x-4 space-x-reverse pt-4">
                <input type="submit" value="إنشاء" class="primary-btn px-6 py-2 rounded-lg cursor-pointer" />
                <a asp-action="Index" class="secondary-btn px-6 py-2 rounded-lg">العودة للقائمة</a>
            </div>
        </div>
    </form>
</div>
