@model Albayan.Areas.Admin.Models.Entities.Subject
@{
    ViewData["Title"] = "حذف المادة";
}
<div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">تأكيد الحذف</h2>
    <div class="card-bg p-6 rounded-lg">
        <h3 class="text-xl text-red-400">هل أنت متأكد من أنك تريد حذف المادة "@Model.Name"؟</h3>
        <p class="text-gray-400 mt-2">سيتم حذف هذه المادة بشكل دائم.</p>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="flex items-center justify-end space-x-4 space-x-reverse pt-6">
                <input type="submit" value="تأكيد الحذف" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg cursor-pointer" />
                <a asp-action="Index" class="secondary-btn px-6 py-2 rounded-lg">العودة للقائمة</a>
            </div>
        </form>
    </div>
</div>