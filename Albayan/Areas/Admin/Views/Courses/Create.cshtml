@model Albayan.Areas.Admin.Models.ViewModels.CourseFormViewModel

@{
    ViewData["Title"] = "إضافة دورة جديدة";
}

<div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">إضافة دورة جديدة</h2>
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="card-bg p-6 rounded-lg space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-400 mb-4"></div>

            <div>
                <label asp-for="Course.Title" class="block mb-2 text-sm font-medium">عنوان الدورة</label>
                <input asp-for="Course.Title" class="input-style w-full p-2.5" />
                <span asp-validation-for="Course.Title" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Course.TeacherId" class="block mb-2 text-sm font-medium"></label>
                    <div class="flex items-center space-x-2 space-x-reverse">
                        <select asp-for="Course.TeacherId" id="Course_TeacherId" class="input-style w-full p-2.5" asp-items="@Model.Teachers">
                            <option value="">-- اختر المعلم --</option>
                        </select>
                    </div>
                    <span asp-validation-for="Course.TeacherId" class="text-red-400 mt-2 text-xs"></span>
                </div>
                <div>
                    <label asp-for="Course.SubjectId" class="block mb-2 text-sm font-medium"></label>
                    <div class="flex items-center space-x-2 space-x-reverse">
                        <select asp-for="Course.SubjectId" id="Course_SubjectId" class="input-style w-full p-2.5" asp-items="@Model.Subjects">
                            <option value="">-- اختر المادة --</option>
                        </select>
                        <button type="button"
                                class="quick-add-btn primary-btn p-2.5 rounded-lg flex-shrink-0"
                                data-modal-title="إضافة مادة جديدة"
                                data-create-url="@Url.Action("CreatePartial", "Subjects")"
                                data-dropdown-id="Course_SubjectId"
                                title="إضافة مادة جديدة">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Course.SubjectId" class="text-red-400 mt-2 text-xs"></span>
                </div>
            </div>

            <div>
                <label asp-for="Course.Description" class="block mb-2 text-sm font-medium">الوصف</label>
                <textarea asp-for="Course.Description" class="input-style w-full p-2.5" rows="4"></textarea>
                <span asp-validation-for="Course.Description" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Course.TotalHours" class="block mb-2 text-sm font-medium">إجمالي الساعات</label>
                    <input asp-for="Course.TotalHours" class="input-style w-full p-2.5" />
                    <span asp-validation-for="Course.TotalHours" class="text-red-400 mt-2 text-xs"></span>
                </div>
                <div>
                    <label asp-for="CoverImage" class="block mb-2 text-sm font-medium"></label>
                    <input asp-for="CoverImage" type="file" class="input-style w-full p-2.5" accept="image/*" />
                    <span asp-validation-for="CoverImage" class="text-red-400 mt-2 text-xs"></span>
                </div>
            </div>

            <div class="flex items-center justify-end space-x-4 space-x-reverse pt-4">
                <input type="submit" value="إنشاء" class="primary-btn px-6 py-2 rounded-lg cursor-pointer" />
                <a asp-action="Index" class="secondary-btn px-6 py-2 rounded-lg">العودة للقائمة</a>
            </div>
        </div>
    </form>
</div>
