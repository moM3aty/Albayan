@model Albayan.Areas.Admin.Models.Entities.Question

@{
    ViewData["Title"] = "حذف السؤال";
}
<div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">تأكيد الحذف</h2>
    <div class="card-bg p-6 rounded-lg">
        <h3 class="text-xl text-red-400">هل أنت متأكد من أنك تريد حذف هذا السؤال؟</h3>
        <div class="mt-4 border-t border-gray-700 pt-4">
            <dl class="space-y-2">
                <dt class="font-semibold">نص السؤال</dt>
                <dd class="text-gray-300">@Model.QuestionText</dd>
            </dl>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="flex items-center justify-end space-x-4 space-x-reverse pt-6">
                <input type="submit" value="تأكيد الحذف" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg cursor-pointer" />
                <a asp-controller="Exams" asp-action="Index" asp-route-courseId="@Model.ExamId" class="secondary-btn px-6 py-2 rounded-lg">العودة للاختبار</a>
            </div>
        </form>
    </div>
</div>
