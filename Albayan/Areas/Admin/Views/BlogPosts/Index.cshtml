@model IEnumerable<Albayan.Areas.Admin.Models.ViewModels.BlogPostIndexViewModel>

@{
    ViewData["Title"] = "إدارة المدونة";
}

<div id="blog-posts">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold">إدارة المدونة</h2>
        <a asp-action="Create" class="primary-btn px-5 py-2 rounded-lg flex items-center">
            <i class="fas fa-plus ml-2"></i> إضافة مقال جديد
        </a>
    </div>
    <div class="card-bg rounded-lg overflow-hidden">
        <table class="w-full text-right">
            <thead class="bg-[#2a3a50]">
                <tr>
                    <th class="p-4 font-semibold">الصورة</th>
                    <th class="p-4 font-semibold">عنوان المقال</th>
                    <th class="p-4 font-semibold">تاريخ النشر</th>
                    <th class="p-4 font-semibold">إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-b border-gray-700 hover:bg-[#2a3a50]/50 transition-colors">
                        <td class="p-2">
                            <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/100x60/1b263b/e0e1dd?text=No+Image" : item.ImageUrl)"
                                 class="w-24 h-14 object-cover rounded-md" />
                        </td>
                        <td class="p-4">@item.Title</td>
                        <td class="p-4">@item.PublishDate.ToString("yyyy/MM/dd")</td>
                        <td class="p-4 space-x-2 space-x-reverse">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-yellow-400 hover:text-yellow-300" title="تعديل"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-400 hover:text-blue-300" title="تفاصيل"><i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-400 hover:text-red-300" title="حذف"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
