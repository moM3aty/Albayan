@model Albayan.Areas.Admin.Models.ViewModels.DashboardViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "الرئيسية";
}

<div id="dashboard">
    <h2 class="text-3xl font-bold mb-6">لوحة التحكم الرئيسية</h2>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
        <div class="card-bg p-6 rounded-lg">
            <div class="flex items-center">
                <i class="fas fa-user-graduate text-3xl accent-color"></i>
                <div class="mr-4">
                    <p class="text-gray-400">إجمالي الطلاب</p>
                    <p class="text-2xl font-bold">@Model.TotalStudents</p>
                </div>
            </div>
        </div>
        <div class="card-bg p-6 rounded-lg">
            <div class="flex items-center">
                <i class="fas fa-chalkboard-teacher text-3xl accent-color"></i>
                <div class="mr-4">
                    <p class="text-gray-400">إجمالي المعلمين</p>
                    <p class="text-2xl font-bold">@Model.TotalTeachers</p>
                </div>
            </div>
        </div>
        <div class="card-bg p-6 rounded-lg">
            <div class="flex items-center">
                <i class="fas fa-video text-3xl accent-color"></i>
                <div class="mr-4">
                    <p class="text-gray-400">إجمالي الدورات</p>
                    <p class="text-2xl font-bold">@Model.TotalCourses</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card-bg p-4 rounded-lg mb-6">
        <h3 class="text-lg font-semibold mb-3 px-2">إجراءات سريعة</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a asp-controller="Students" asp-action="Create" class="secondary-btn p-4 rounded-lg text-center hover:bg-gray-700 transition-colors">
                <i class="fas fa-user-plus text-2xl mb-2 accent-color"></i>
                <p>إضافة طالب</p>
            </a>
            <a asp-controller="Courses" asp-action="Create" class="secondary-btn p-4 rounded-lg text-center hover:bg-gray-700 transition-colors">
                <i class="fas fa-plus-circle text-2xl mb-2 accent-color"></i>
                <p>إضافة دورة</p>
            </a>
            <a asp-controller="LiveLessons" asp-action="Create" class="secondary-btn p-4 rounded-lg text-center hover:bg-gray-700 transition-colors">
                <i class="fas fa-calendar-plus text-2xl mb-2 accent-color"></i>
                <p>جدولة درس مباشر</p>
            </a>
            <a asp-controller="BlogPosts" asp-action="Create" class="secondary-btn p-4 rounded-lg text-center hover:bg-gray-700 transition-colors">
                <i class="fas fa-pen-square text-2xl mb-2 accent-color"></i>
                <p>كتابة مقال</p>
            </a>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 mb-6">
        <div class="card-bg p-6 rounded-lg lg:col-span-3">
            <h3 class="text-xl font-semibold mb-4">الطلاب الجدد (آخر ٦ أشهر)</h3>
            <canvas id="newStudentsChart"></canvas>
        </div>
        <div class="card-bg p-6 rounded-lg lg:col-span-2">
            <h3 class="text-xl font-semibold mb-4">توزيع الطلاب على الصفوف</h3>
            <canvas id="studentsByGradeChart"></canvas>
        </div>
    </div>


    <!-- Latest Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Latest Students -->
        <div class="card-bg p-6 rounded-lg">
            <h3 class="text-xl font-semibold mb-4">أحدث الطلاب المسجلين</h3>
            <div class="space-y-4">
                @if (Model.LatestStudents != null && Model.LatestStudents.Any())
                {
                    @foreach (var student in Model.LatestStudents)
                    {
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-semibold text-white">@student.FullName</p>
                                <p class="text-sm text-gray-400">@student.RegistrationDate.ToString("yyyy/MM/dd")</p>
                            </div>
                            <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" class="text-blue-400 hover:underline text-sm">عرض</a>
                        </div>
                    }
                }
                else
                {
                    <p class="text-gray-500">لا يوجد طلاب مسجلون حديثاً.</p>
                }
            </div>
        </div>

        <!-- Popular Courses -->
        <div class="card-bg p-6 rounded-lg">
            <h3 class="text-xl font-semibold mb-4">الدورات الأكثر تسجيلاً</h3>
            <div class="space-y-4">
                @if (Model.PopularCourses != null && Model.PopularCourses.Any())
                {
                    @foreach (var course in Model.PopularCourses)
                    {
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-semibold text-white">@course.Title</p>
                                <p class="text-sm text-gray-400">@course.LessonsCount تسجيل</p>
                            </div>
                            <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="text-blue-400 hover:underline text-sm">عرض</a>
                        </div>
                    }
                }
                else
                {
                    <p class="text-gray-500">لا توجد بيانات عن الدورات الأكثر تسجيلاً.</p>
                }
            </div>
        </div>

        <!-- Latest Blog Posts -->
        <div class="card-bg p-6 rounded-lg lg:col-span-2">
            <h3 class="text-xl font-semibold mb-4">آخر مقالات المدونة</h3>
            <ul class="space-y-3">
                @if (Model.LatestBlogPosts != null && Model.LatestBlogPosts.Any())
                {
                    @foreach (var post in Model.LatestBlogPosts)
                    {
                        <li class="flex justify-between items-center text-sm">
                            <a asp-controller="BlogPosts" asp-action="Details" asp-route-id="@post.Id" class="hover:text-blue-400">@post.Title</a>
                            <span class="text-gray-400">@post.PublishDate.ToString("yyyy/MM/dd")</span>
                        </li>
                    }
                }
                else
                {
                    <p class="text-gray-500">لا توجد مقالات مضافة حديثاً.</p>
                }
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const chartTextColor = '#e0e1dd';
            const chartGridColor = 'rgba(255, 255, 255, 0.1)';

            // New Students Line Chart
            const ctxStudents = document.getElementById('newStudentsChart')?.getContext('2d');
            if (ctxStudents) {
                new Chart(ctxStudents, {
                    type: 'line',
                    data: {
                        labels: @Html.Raw(JsonSerializer.Serialize(Model.NewStudentsChartLabels)),
                        datasets: [{
                            label: 'طلاب جدد',
                            data: @Html.Raw(JsonSerializer.Serialize(Model.NewStudentsChartData)),
                            fill: true,
                            backgroundColor: 'rgba(58, 134, 255, 0.2)',
                            borderColor: '#3a86ff',
                            tension: 0.3
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: { beginAtZero: true, grid: { color: chartGridColor }, ticks: { color: chartTextColor } },
                            x: { grid: { display: false }, ticks: { color: chartTextColor } }
                        },
                        plugins: { legend: { display: false } }
                    }
                });
            }

            // Students by Grade Doughnut Chart
            const ctxGrades = document.getElementById('studentsByGradeChart')?.getContext('2d');
            if (ctxGrades) {
                new Chart(ctxGrades, {
                    type: 'doughnut',
                    data: {
                        labels: @Html.Raw(JsonSerializer.Serialize(Model.StudentsByGradeChartLabels)),
                        datasets: [{
                            label: 'عدد الطلاب',
                            data: @Html.Raw(JsonSerializer.Serialize(Model.StudentsByGradeChartData)),
                            backgroundColor: [
                                'rgba(58, 134, 255, 0.8)',
                                'rgba(255, 193, 7, 0.8)',
                                'rgba(40, 167, 69, 0.8)',
                                'rgba(220, 53, 69, 0.8)',
                                'rgba(111, 66, 193, 0.8)',
                                'rgba(23, 162, 184, 0.8)'
                            ],
                            borderColor: '#1b263b',
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                                labels: {
                                    color: chartTextColor
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
}
