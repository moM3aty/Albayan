@model Albayan.Areas.Admin.Models.ViewModels.StudentFormViewModel

@{
    ViewData["Title"] = "إضافة طالب جديد";
}

<div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">إضافة طالب جديد</h2>
    <form asp-action="Create">
        <div class="card-bg p-6 rounded-lg space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-400 mb-4"></div>

            <input type="hidden" asp-for="Student.RegistrationDate" />

            <div>
                <label asp-for="Student.FullName" class="block mb-2 text-sm font-medium">الاسم الكامل</label>
                <input asp-for="Student.FullName" class="input-style w-full p-2.5" />
                <span asp-validation-for="Student.FullName" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div>
                <label asp-for="Student.Email" class="block mb-2 text-sm font-medium">البريد الإلكتروني</label>
                <input asp-for="Student.Email" class="input-style w-full p-2.5" />
                <span asp-validation-for="Student.Email" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div>
                <label asp-for="Student.PhoneNumber" class="block mb-2 text-sm font-medium">رقم الهاتف</label>
                <input asp-for="Student.PhoneNumber" class="input-style w-full p-2.5" />
                <span asp-validation-for="Student.PhoneNumber" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div>
                <label asp-for="Password" class="block mb-2 text-sm font-medium">كلمة المرور</label>
                <input asp-for="Password" type="password" class="input-style w-full p-2.5" />
                <span asp-validation-for="Password" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div>
                <label asp-for="Student.GradeId" class="block mb-2 text-sm font-medium">الصف الدراسي</label>
                <select asp-for="Student.GradeId" class="input-style w-full p-2.5" asp-items="@Model.Grades">
                    <option value="">-- اختر الصف --</option>
                </select>
                <span asp-validation-for="Student.GradeId" class="text-red-400 mt-2 text-xs"></span>
            </div>



            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Student.City" class="block mb-2 text-sm font-medium">المدينة</label>
                    <input asp-for="Student.City" class="input-style w-full p-2.5" />
                    <span asp-validation-for="Student.City" class="text-red-400 mt-2 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Student.Country" class="block mb-2 text-sm font-medium">الدولة</label>
                    <input asp-for="Student.Country" class="input-style w-full p-2.5" />
                    <span asp-validation-for="Student.Country" class="text-red-400 mt-2 text-xs"></span>
                </div>
            </div>

            <div class="flex items-center justify-end space-x-4 space-x-reverse pt-4">
                <input type="submit" value="إنشاء" class="primary-btn px-6 py-2 rounded-lg cursor-pointer" />
                <a asp-action="Index" class="secondary-btn px-6 py-2 rounded-lg">العودة للقائمة</a>
            </div>
        </div>
    </form>
</div>
