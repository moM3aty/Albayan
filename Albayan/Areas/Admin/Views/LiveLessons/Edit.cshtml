@model Albayan.Areas.Admin.Models.ViewModels.LiveLessonFormViewModel

@{
    ViewData["Title"] = "تعديل الدرس المباشر";
}

<div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">تعديل الدرس: @Model.LiveLesson.Title</h2>
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="LiveLesson.Id" />
        <input type="hidden" asp-for="LiveLesson.CoverImageUrl" />
        <div class="card-bg p-6 rounded-lg space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-400 mb-4"></div>

            <div>
                <label asp-for="LiveLesson.Title" class="block mb-2 text-sm font-medium">عنوان الدرس</label>
                <input asp-for="LiveLesson.Title" class="input-style w-full p-2.5" />
                <span asp-validation-for="LiveLesson.Title" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div>
                <label asp-for="LiveLesson.Description" class="block mb-2 text-sm font-medium">الوصف</label>
                <textarea asp-for="LiveLesson.Description" class="input-style w-full p-2.5" rows="3"></textarea>
                <span asp-validation-for="LiveLesson.Description" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="LiveLesson.TeacherId" class="block mb-2 text-sm font-medium"></label>
                    <select asp-for="LiveLesson.TeacherId" class="input-style w-full p-2.5" asp-items="@Model.Teachers">
                        <option value="">-- اختر المعلم --</option>
                    </select>
                    <span asp-validation-for="LiveLesson.TeacherId" class="text-red-400 mt-2 text-xs"></span>
                </div>
                <div>
                    <label asp-for="LiveLesson.SubjectId" class="block mb-2 text-sm font-medium"></label>
                    <select asp-for="LiveLesson.SubjectId" class="input-style w-full p-2.5" asp-items="@Model.Subjects">
                        <option value="">-- اختر المادة --</option>
                    </select>
                    <span asp-validation-for="LiveLesson.SubjectId" class="text-red-400 mt-2 text-xs"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="LiveLesson.StartTime" class="block mb-2 text-sm font-medium">موعد البدء</label>
                    <input asp-for="LiveLesson.StartTime" class="input-style w-full p-2.5" />
                    <span asp-validation-for="LiveLesson.StartTime" class="text-red-400 mt-2 text-xs"></span>
                </div>
                <div>
                    <label asp-for="LiveLesson.DurationMinutes" class="block mb-2 text-sm font-medium">المدة (بالدقائق)</label>
                    <input asp-for="LiveLesson.DurationMinutes" class="input-style w-full p-2.5" type="number" />
                    <span asp-validation-for="LiveLesson.DurationMinutes" class="text-red-400 mt-2 text-xs"></span>
                </div>
            </div>

            <div>
                <label asp-for="CoverImage" class="block mb-2 text-sm font-medium">تغيير صورة الغلاف (اختياري)</label>
                <input asp-for="CoverImage" type="file" class="input-style w-full p-2.5" accept="image/*" />
                <span asp-validation-for="CoverImage" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div>
                <label asp-for="LiveLesson.MeetingUrl" class="block mb-2 text-sm font-medium">رابط الاجتماع (Zoom, Meet, etc.)</label>
                <input asp-for="LiveLesson.MeetingUrl" class="input-style w-full p-2.5" />
                <span asp-validation-for="LiveLesson.MeetingUrl" class="text-red-400 mt-2 text-xs"></span>
            </div>

            <div class="flex items-center justify-end space-x-4 space-x-reverse pt-4">
                <input type="submit" value="حفظ التعديلات" class="primary-btn px-6 py-2 rounded-lg cursor-pointer" />
                <a asp-action="Index" class="secondary-btn px-6 py-2 rounded-lg">العودة للقائمة</a>
            </div>
        </div>
    </form>
</div>
