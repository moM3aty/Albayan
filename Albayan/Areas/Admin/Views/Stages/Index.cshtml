@model IEnumerable<Albayan.Areas.Admin.Models.ViewModels.StageIndexViewModel>

@{
    ViewData["Title"] = "المراحل الدراسية";
}

<div id="stages">
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="error-alert" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
            <strong class="font-bold"><i class="fas fa-exclamation-triangle"></i> خطأ!</strong>
            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
            <span class="absolute top-0 bottom-0 left-0 px-4 py-3" onclick="this.parentElement.style.display='none';" style="cursor: pointer;">
                <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>إغلاق</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" /></svg>
            </span>
        </div>
    }

    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold">إدارة المراحل الدراسية</h2>
        <a asp-action="Create" class="primary-btn px-5 py-2 rounded-lg flex items-center">
            <i class="fas fa-plus ml-2"></i> إضافة مرحلة جديدة
        </a>
    </div>
    <div class="card-bg rounded-lg overflow-hidden">
        <table class="w-full text-right">
            <thead class="bg-[#2a3a50]">
                <tr>
                    <th class="p-4 font-semibold">اسم المرحلة</th>
                    <th class="p-4 font-semibold">عدد الصفوف</th>
                    <th class="p-4 font-semibold">إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-b border-gray-700 hover:bg-[#2a3a50]/50 transition-colors">
                        <td class="p-4">@item.Name</td>
                        <td class="p-4">@item.GradesCount</td>
                        <td class="p-4 space-x-2 space-x-reverse">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-yellow-400 hover:text-yellow-300" title="تعديل"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-400 hover:text-blue-300" title="التفاصيل"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-400 hover:text-red-300" title="حذف"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
