@model Albayan.Areas.Admin.Models.Entities.Stage

@{
    ViewData["Title"] = "تفاصيل المرحلة";
}
<div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">تفاصيل: @Model.Name</h2>
    <div class="card-bg p-6 rounded-lg">
        <h3 class="text-xl text-gray-300">الصفوف الدراسية في هذه المرحلة</h3>
        <div class="mt-4 border-t border-gray-700 pt-4">
            @if (Model.Grades != null && Model.Grades.Any())
            {
                <ul class="list-disc list-inside space-y-2">
                    @foreach (var grade in Model.Grades)
                    {
                        <li>@grade.Name</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-gray-500">لا توجد صفوف مضافة لهذه المرحلة بعد.</p>
            }
        </div>
        <div class="flex items-center justify-end space-x-4 space-x-reverse pt-6">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="primary-btn px-6 py-2 rounded-lg">تعديل</a>
            <a asp-action="Index" class="secondary-btn px-6 py-2 rounded-lg">العودة للقائمة</a>
        </div>
    </div>
</div>
