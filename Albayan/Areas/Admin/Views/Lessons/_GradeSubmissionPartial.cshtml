@model Albayan.Areas.Admin.Models.ViewModels.GradeSubmissionViewModel

<form asp-action="GradeSubmission" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-red-400 mb-4"></div>
    <input type="hidden" asp-for="SubmissionId" />

    <div class="space-y-4">
        <div>
            <label class="block mb-2 text-sm font-medium text-gray-300">اسم الطالب</label>
            <input type="text" class="input-style w-full p-2.5" value="@Model.StudentName" readonly />
        </div>
        <div>
            <a href="@Model.SubmissionFilePath" target="_blank" class="text-blue-400 hover:underline">
                <i class="fas fa-download mr-2"></i> تحميل ملف إجابة الطالب
            </a>
        </div>
        <div>
            <label asp-for="Grade" class="block mb-2 text-sm font-medium text-gray-300"></label>
            <input asp-for="Grade" type="number" class="input-style w-full p-2.5" />
            <span asp-validation-for="Grade" class="text-red-400 mt-2 text-xs"></span>
        </div>
        <div>
            <label asp-for="Feedback" class="block mb-2 text-sm font-medium text-gray-300"></label>
            <textarea asp-for="Feedback" class="input-style w-full p-2.5" rows="3"></textarea>
            <span asp-validation-for="Feedback" class="text-red-400 mt-2 text-xs"></span>
        </div>
    </div>

    <div class="flex items-center justify-end pt-6 border-t border-gray-600 mt-6">
        <button type="submit" class="primary-btn px-6 py-2 rounded-lg cursor-pointer">حفظ التقييم</button>
    </div>
</form>
